@{
    ViewBag.Title = "Cadastrar";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Cadastrar Atendimento</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>



<div class="panel panel-default">
    <div class="panel-heading">
        Cadastro
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <form action="~/Atendimento/Cadastrar" autocomplete="on" method="post" role="form">
                    <div class="form-group">
                        <label>Nome Paciente</label>
                        <input type="text" id="NomePaciente" name="NomePaciente" required class="form-control">
                        
                    </div>
                    <div class="form-group">
                        <label>Tipo Exame</label>
                         <select name="TipoExame" id="TipoExame" class="form-control">
                            <option>Exame 1</option>
                            <option>Exame 2</option>
                            <option>Exame 3</option>
                            <option>Exame 4</option>
                        </select>

                    </div>


                    <!-- começa aqui o calendário -->


 


                    <!-- termina aqui o calendário -->

          
                    <div class="form-group">
                        <input type="submit" id="btCadastrar" name="btCadastrar" value="Cadastrar" class="btn btn-primary" />
                    </div>
                </form>
            </div>

        </div>
        <!-- /.row (nested) -->
    </div>
    <!-- /.panel-body -->
</div>

<p>
Nome Paciente: @ViewBag.NomePaciente <br/>
Tipo Exame: @ViewBag.TipoExame <br /> 
</p>


